{
  "name": "@ts-fullstack-template/desktop-main",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "scripts": {
    "dev": "yarn build && concurrently \"yarn build:watch\" \"yarn electron:watch\"",
    "build": "tsc && tsx scripts/build.ts",
    "build:watch": "cross-env ESBUILD_WATCH=true tsx scripts/build.ts",
    "electron:start": "electron dist/index.js",
    "electron:watch": "electron dist/index.js --watch"
  },
  "private": true,
  "dependencies": {
    "@ts-fullstack-template/process-event-emitter": "*"
  },
  "devDependencies": {
    "@ts-fullstack-template/desktop-contract": "*",
    "@ts-fullstack-template/tsconfig": "*",
    "@ts-fullstack-template/esbuild-config": "*",
    "cross-env": "^7.0.3",
    "concurrently": "^8.2.2",
    "electron": "^28.2.7",
    "esbuild": "^0.20.1"
  }
}
