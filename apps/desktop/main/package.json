{
  "name": "@ts-fullstack-template/desktop-main",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "imports": {
    "#src/*": "./dist/*"
  },
  "scripts": {
    "dev": "yarn build && concurrently \"yarn tsc:watch\" \"yarn electron:start\"",
    "build": "tsc && tsx scripts/build.ts",
    "node:watch": "node --watch dist/index.js",
    "electron:start": "electron dist/index.js",
    "tsc:watch": "tsc --watch"
  },
  "private": true,
  "dependencies": {
    "@ts-fullstack-template/process-event-emitter": "*"
  },
  "devDependencies": {
    "@ts-fullstack-template/contract": "*",
    "@ts-fullstack-template/tsconfig": "*",
    "@ts-fullstack-template/esbuild-config": "*",
    "concurrently": "^8.2.2",
    "electron": "^29.0.1",
    "esbuild": "^0.20.1"
  }
}
