{
  "display": "Base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "sourceMap": true,
    // Module '"path"' can only be default-imported using the 'allowSyntheticDefaultImports' flag
    "allowSyntheticDefaultImports": true,
    // must be not "classic" to activate "resolveJsonModule"
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // skip type checking for third-party libraries installed in node_modules
    "skipLibCheck": true,
    // 
    "esModuleInterop": true
  }
}
