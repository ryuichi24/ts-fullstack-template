{
  "display": "Base",
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "sourceMap": true,
    // Module '"path"' can only be default-imported using the 'allowSyntheticDefaultImports' flag
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // skip type checking for third-party libraries installed in node_modules
    "skipLibCheck": true,
    // treat common js module as ES module: const moment = require("moment") => import * as moment from "moment"
    "esModuleInterop": true
  }
}
