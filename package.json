{
  "name": "ts-fullstack-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/**/*",
    "dev/**/*",
    "packages/**/*"
  ],
  "scripts": {
    "dev": "dotenv -e ./.env -c local -- turbo run dev --filter=./apps/**/*",
    "dev:web": "dotenv -e ./.env -c local -v DEV_TYPE=web -- turbo run dev:web --filter=./apps/**/*",
    "build": "turbo run build"
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": ">=v20.0.0",
    "yarn": ">=v1.22.19"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "turbo": "^1.12.4"
  }
}
