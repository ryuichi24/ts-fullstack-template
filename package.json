{
  "name": "ts-fullstack-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "apps/**/*",
    "dev/**/*",
    "packages/**/*"
  ],
  "scripts": {
    "dev": "yarn build:native:electron && dotenv -e ./.env -c local -- turbo run dev --filter=./apps/**/*",
    "dev:web": "yarn build:native:node && dotenv -e ./.env -c local -v DEV_TYPE=web -- turbo run dev:web --filter=./apps/**/*",
    "build": "turbo run build",
    "clean": "node ./scripts/clean.js . node_modules dist release .turbo build-info.json .tsbuildinfo",
    "build:native:node": "yarn workspace @ts-fullstack-template/native build:node",
    "build:native:electron": "yarn workspace @ts-fullstack-template/native build:electron"
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": ">=v20.0.0",
    "yarn": ">=v1.22.19"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "turbo": "^1.12.4"
  }
}
